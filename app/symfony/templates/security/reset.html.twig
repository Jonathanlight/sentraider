{% extends 'base.html.twig' %}

{% block title %} {{ 'page.login.description'|trans }} {% endblock %}

{% block stylesheets %}{% endblock %}

{% block navbar %}
    <!-- Main navigation -->
    {% include('composant/navbar.html.twig') %}
{% endblock %}

{% block body %}
    <!-- Body -->
    <div class="container">
        <section class="my-5">
            <h1 class="h1-responsive font-weight-bold text-center my-5">{{ 'page.login.password_forget'|trans }}</h1>
            {% include 'composant/messageFlash.html.twig' %}
            <div class="row">
                <div class="col-md-6 mb-lg-0 mb-4">
                    <div class="card">
                        <div class="card-body">
                            {{ form_start(form) }}
                            <div class="md-form">
                                <i class="fas fa-user prefix grey-text"></i>
                                {{ form_widget(form.password.first) }}
                            </div>
                            <div class="md-form">
                                <i class="fas fa-lock prefix grey-text"></i>
                                {{ form_widget(form.password.second) }}
                            </div>
                            <p> {{ 'page.login.sign_not'|trans }} <a class="green-text" href="{{ url('register') }}"> Inscrivez-vous </a> </p>
                            <div class="text-center">
                                {{ form_widget(form.submit) }}
                            </div>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <img src="{{ asset('assets/front/img/home/block_left_min_3.jpg') }}" class="img-fluid" alt="smaple image">
                </div>
            </div>
        </section>
    </div>
{% endblock %}