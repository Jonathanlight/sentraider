{% extends 'base_security.html.twig' %}
{% block stylesheets %}
    <link href="{{ asset('assets/user/office/css/page-center.css') }}" type="text/css" rel="stylesheet">
    <style>
        #main {
            padding-left: 0px !important;
        }
    </style>

{% endblock %}

{% block header %}{% endblock %}
{% block nav %}{% endblock %}
{% block container %}

<!--   Icon Section   -->
<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <div id="login-page" class="card-content">
                <div class="col s12 z-depth-6 card-panel">
                    <form class="well form-horizontal" action="{{ path('passwords') }}"  method="post"  id="contact_form">
                        <fieldset>
                            <legend>Changez votre mot de passe</legend>
                            <div class="panel panel-title" id="div_etape1">
                                <div class="panel-body center-block">

                                    <div class="form-group">
                                        <label for="nom" class="col-lg-2 control-label">Nouveau :</label>
                                        <div class="col-lg-5">
                                            <input type="hidden"  value=" {{ token }} " name="tokken"  />

                                            <input type="password" class="form-control" id="nom" placeholder="Nouveau mot de passe" name="password_new" required />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="nom" class="col-lg-2 control-label">Mot de passe :</label>
                                        <div class="col-lg-5">
                                            <input type="password" class="form-control" id="nom" placeholder="Confirmation du mot de passe" name="password_new2" required />
                                        </div>
                                    </div>

                                </div>

                                <div class="form-group">
                                    <div class="col-lg-offset-2 col-lg-5">
                                        <input type="submit" class="btn btn-primary" id="etape5" value="Modifier" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


{% endblock %}
{% block footer %}{% endblock %}
{% block javascripts %}

    <script type="text/javascript">

        var email = localStorage.getItem("email");
        var tel = localStorage.getItem("tel");
        $("#email").val(email);
        $("#tel").val(tel);
    </script>
{% endblock %}



