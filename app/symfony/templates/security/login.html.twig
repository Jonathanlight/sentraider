{% extends 'base.html.twig' %}

{% block title %} {{ 'page.login.description'|trans }} {% endblock %}

{% block stylesheets %}{% endblock %}

{% block navbar %}
    <!-- Main navigation -->
    {% include('composant/navbar.html.twig') %}
{% endblock %}

{% block body %}
    <!-- Body -->
<div class="container">
    <section class="my-5">
        <h1 class="h1-responsive font-weight-bold text-center my-5">{{ 'page.home.header.connexion'|trans }} {{ admin ?? '' }}</h1>
        {% include 'composant/messageFlash.html.twig' %}
        <div class="row">
            <div class="col-md-6 mb-lg-0 mb-4">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="md-form">
                                <i class="fas fa-user prefix grey-text"></i>
                                {{ form_widget(form._username) }}
                            </div>
                            <div class="md-form">
                                <i class="fas fa-lock prefix grey-text"></i>
                                {{ form_widget(form._password) }}
                            </div>
                            {% if admin == '' %}
                                <p> {{ 'page.login.sign_not'|trans }} <a class="green-text" href="{{ url('register') }}"> Inscrivez-vous </a> </p>
                                <p><a class="green-text" data-toggle="modal" data-target="#requestPasswordModal">{{ 'page.login.passwordForget.url'|trans }} </a></p>
                            {% endif %}
                            <div class="text-center">
                                {{ form_widget(form.submit) }}
                            </div>
                        {{ form_end(form) }}

                        {% if admin == '' %}
                            {{ include('composant/request_password.html.twig') }}
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <img src="{{ asset('assets/front/img/home/block_left_min_3.jpg') }}" class="img-fluid" alt="smaple image">
            </div>
        </div>
    </section>
</div>
{% endblock %}